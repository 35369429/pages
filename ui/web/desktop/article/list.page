<div class="container main" id="main-width">
	<div class="row show-list"> <!-- 主体左侧 -->
		<div class="col-lg-8 main-left">
			<div class="row title-list" mp:for="{{article.data}}">
				<!-- 左侧图片 -->
				<div class="col-lg-4 left-img">
					<a href="/article/{{item.article_id}}">
						<img src="{{item.thumbs.3}}" style="width: 100%;height: 100%">
					</a>
				</div>
				<!-- 右侧标题及内容 -->
				<div class="col-lg-8">
					<h3><a href="/article/{{item.article_id}}">{{item.title}}</a></h3>
					<span>{{item.summary}}</span>
				</div>
			</div>

			<ul class="paging">
				<li mp:if="{{article.prev != false}}" > 
					<a href="/list/{{current.category_id}}?page={{article.prev}}"> &lt;&lt; 上一页 </a>
				</li>

			 	<li mp:for-from="1" mp:for-to="{{article.last + 1}}" class="{{(index == article.curr) ? 'active'}}"  >
			 		<a href="/list/{{current.category_id}}?page={{index}}"> {{index}} </a>
			 	</li>

				<li mp:if="{{article.next != false}}"> 
					<a href="/list/{{current.category_id}}?page={{article.next}}"> 下一页 &gt;&gt; </a>
				</li>
			</ul>

		</div>


		<div class="col-lg-4 main-right">
				<!-- 上半部 -->
			<div class="sidebar-block">
				<h4>即时新闻</h4>
				<ul>
					<li mp:for="{{news.data}}">
						<a href="/article/{{item.article_id}}">{{item.title}}</a>
					</li>
				</ul>
			</div>
		</div>

		
	</div>
</div>


