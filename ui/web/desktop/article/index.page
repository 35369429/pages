<include src="__WEB_ROOT__/desktop/common/head.page"  />
<include src="__WEB_ROOT__/desktop/common/header.page"  />

<div class="container"><div class="row">
	<!-- 左侧菜单导航 -->
	<div class="col-xs-2 nav">
		<div class="logo">
			<img src="{{__STOR__::/__PROJECT_NAME/desktop/assets}}/images/xpmsns-logo.png" alt=""  class="title_block">
		</div>
		<ul class="nav-list">
			<li mp:for="{{categories.data}}" 
				mp:for-item="{{ca}}" 
				class="{{ (ca.category_id == current.category_id) ? 'active'}}" 
			>
				<a href="/article/list/{{ca.category_id}}">{{ca.name}}</a>
			</li>
		</ul>
	</div> <!-- END 左侧菜单导航 -->

	<!-- 内容区 -->
	<div class="col-xs-7">

		<!-- 焦点图 -->
		<section class="focus">
			<div class="slide">
				<ul class="items">
					<li data-id="{{rs.article_id}}" mp:for="{{focus}}" mp:for-from="0" mp:for-to="7"  mp:for-index="{{idx}}"  mp:for-item="{{rs}}">
						
						<a href="/article/{{rs.article_id}}" ><img src="{{rs.thumbs.1.url}}"></a>
						<h5>{{rs.title}}</h5>
					</li>
				</ul>
				<ul class="tags" >
					<li data-id="{{rs.article_id}}" class="{{ (idx == 0) ? 'active'}}" 
						mp:for="{{focus}}" mp:for-from="0" mp:for-to="7"  mp:for-index="{{idx}}"  mp:for-item="{{rs}}" > 
						{{rs.category_last.name}}
					</li>
				</ul>
			</div>
		</section><!-- END 焦点图 -->
	
		<!-- 文章列表-->
		<section class="articles">
			<!-- 文章列表项 -->
			<div class="article-item-1" mp:for="{{articles.data}}" mp:for-item="{{rs}}" >
				<div class="image" mp:if="{{rs.cover.url}}"> 
					<img
						width="150"
					    data-sizes="150X100"
					    data-src="{{rs.cover.url}}"
					  	class="lazyload" />
				</div>
				<div class="content">
					<h5><a href="/article/{{rs.article_id}}" >{{rs.title}}</a></h5>
					<p>
						<a class="category" href="/article/list/{{rs.category_last.category_id}}">{{rs.category_last.name}}</a>
						<span class="author">{{rs.author}}</span>
						<span class="pubtime">{{rs.publish_date}}</span>
					</p>
				</div>
				<div class="clear"></div>
			</div> <!-- END 文章列表项 -->

		</section><!-- END 文章列表-->

	</div> <!-- END 内容区 -->

	<!-- 右侧推荐内容区 -->
	<div class="col-xs-3">
		
		<!-- 阿里妈妈 广告 -->
		<section class="alimama block block-full">
			<div class="block-content">
				<a href="https://s.click.taobao.com/Wc5q6Uw" target="_blank">
					<img width="100%" src="{{__STOR__::/__PROJECT_NAME/desktop/assets}}/images/aliyun-a-320x427.jpg">
				</a>
			</div>
		</section> <!-- END 阿里妈妈广告 -->
		
		<!-- 24小时热文 -->
		<section class="hot block">
			<div class="block-title">24小时热文</div>
			<div class="block-content"  >
				<div class="item-1" mp:for="{{hot}}" mp:for-from="0" mp:for-to="6"  mp:for-index="{{idx}}"  mp:for-item="{{rs}}">
					<div class="image">
						<a href="/article/{{rs.article_id}}">
							<img
								wdith="60"
								height="60"
						    	data-sizes="60X60"
						    	data-src="{{rs.cover.url}}"
						  		class="lazyload" />
					  	</a>
					</div>
					<div class="title"> <a href="/article/{{rs.article_id}}">{{rs.title}}</a> </div>
					<div class="clear"></div>
				</div>
			</div>
		</section> <!-- 24小时热文END  -->

		<!-- 关于我们 -->
		<section class="about block">
			<div class="block-content">
				<ul>
					<li> © 2018 XpmSNS.com </li>
					<li> 京ICP备14050225号-7</li>
					<li> 公司: 北京云道天成科技有限公司</li>
					<li> 电话: 400-617-9608</li>
					<li> 地址: 北京市昌平区北清路8号三一重工产业园区</li>
					
					<li class="image">
						<span> 微信小程序 </span>
						<img width='150'  src='{{__STOR__::/__PROJECT_NAME/desktop/assets}}/images/qr-wxapp-index.jpg' />
					</li>
					<li class="image">
						<span> 微信版 ( HTML5 ) </span>
						<img width='150'  src='{{__STOR__::/__PROJECT_NAME/desktop/assets}}/images/qr-m-index.png' />
					</li>

					<li class="image">
						<span> 安卓客户端 ( iOS 审核中 ) </span>
						<img width='150'  src='{{__STOR__::/__PROJECT_NAME/desktop/assets}}/images/qr-m-index.png' />
					</li>

					<li class="image">
						<span> 官方微信公众号 </span>
						<img width='150'  src='{{__STOR__::/__PROJECT_NAME/desktop/assets}}/images/qr-m-index.png' />
					</li>
				</ul>
			</div>
		</section> <!-- 关于我们 END -->

	</div><!-- END 右侧推荐内容区 -->
</div></div>


