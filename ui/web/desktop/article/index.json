{	
	"cname":"头条首页",
	"data": {
		"categories":{
			"api":"/xpmsns/pages/category/search",
			"query":{
				"select":"category_id,name",
				"order":"priority asc",
				"children":false,
				"param":"isnav=true"
			}
		},
		"advs": {
			"api":"/xpmsns/pages/adv/search",
			"query":{
				"pnos":"A-T-001,A-R-001,A-R-002,A-M-001,A-M-002",
				"status":"online",
				"perpage":"200"
			}
		},
		"site":{
			"api":"/xpmsns/pages/siteconf/get",
			"query":{
				"site_slug":"global",
				"select":"*"
			}
		},
		"current":"{{categories.data.0}}",
		"articles":{
			"api":"/xpmsns/pages/article/search",
			"query":{
				"perpage":15,
				"order":"publish_time desc",
				"categoryId":"{{current.category_id}}",
				"page":"{{__get.page}}"
			}
		},
		"recommend": {
			"api":"/xpmsns/pages/article/recommend",
			"query":{
				"section":"hot,focus"
			}
		},
		"hot": "{{recommend.hot.data}}",
		"focus": "{{recommend.focus.data}}",
		"page":{
			"title":"{{current.name}}",
			"logo":"{{site.site_logo}}"
		},
		"seo": {
			"title":"{{current.name}}",
			"keywords":"{{site.site_name}}",
			"description":"{{site.site_intro}}"
		}
	},
	"entries":[
		{"method":"GET", "router":"/", "ttl":0},
		{"method":"GET", "router":"/index", "ttl":0},
		{"method":"GET", "router":"/article", "ttl":0}
	],
	
	"alias": {
		"mobile":"/mobile/article/index",
		"wechat":"/mobile/article/index",
		"wxapp": "/article"
	}
}