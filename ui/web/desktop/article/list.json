{	
	"cname":"文章列表页",
	"data": {
		"category":{
			"api":"/xpmsns/pages/category/search",
			"query":{
				"select":"category_id,name",
				"children":false,
				"param":"isnav=true",
				"status":"on"
			}
		},
		"article":{
			"api":"/xpmsns/pages/article/search",
			"query":{
				"select":"article_id,title,cover,summary,publish_time,thumbs",
				"c":"{{__var.slug}}",
				"perpage":20,
				"page":"{{__get.page}}",
				"order":"publish_time desc"
			}
		},

		"news":{
			"api":"/xpmsns/pages/article/search",
			"query":{
				"select":"article_id,title,publish_time",
				"category":"新闻公告",
				"perpage":6,
				"order":"publish_time desc"
			}
		},
		"cate":{
			"api":"/xpmsns/pages/category/search",
			"query":{
				"select":"category_id,name",
				"children":false,
				"perpage":1,
				"slug":"{{__var.slug}}",
				"status":"on"
			}
		},
		"navcates":"{{category.data}}",
		"current":"{{cate.data.0}}",
		"page":{
			"title":"{{cate.data.0.name}}"
		}
	},
	"entries":[
		{"method":"GET", "router":"/list/{slug:.+}", "ttl":0}
	],

	"align": {
		"mobile":"/mobile/article/detail",
		"wxapp":"/article/detail"
	}
}